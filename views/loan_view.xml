<odoo>
    <!-- Vista de lista para library.loan -->
    <record id="view_loan_list" model="ir.ui.view">
        <field name="name">library.loan.list</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="book_id"/>
                <field name="loan_date"/>
                <field name="return_date"/>
                <field name="loan_status"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para library.loan -->
    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">library.loan.form</field>
        <field name="model">library.loan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="book_id"/>
                        <field name="loan_date"/>
                        <field name="return_date"/>
                        <field name="loan_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para mostrar la lista de préstamos -->
    <record id="action_library_loan" model="ir.actions.act_window">
        <field name="name">Préstamos</field>
        <field name="res_model">library.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay préstamos registrados. Crea uno nuevo.
            </p>
        </field>
    </record>

    <!-- Submenú de préstamos dentro del menú Biblioteca -->
    <menuitem id="menu_library_loan"
              name="Préstamos"
              parent="menu_library_root"
              action="action_library_loan"/>
</odoo>
